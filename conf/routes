# Users
POST    /users  controllers.Application.newUser

GET     /users/:userId controllers.Application.getUser(userId: Long)

# Stocks
POST    /users/:userId/stocks/:symbol controllers.Application.addStock(userId: Long, symbol: String)

GET     /users/:userId/stocks controllers.Application.getStocks(userId: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)